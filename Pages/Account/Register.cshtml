@* File: Pages/Account/Register.cshtml *@
@page
@model Demo.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </h3>
                    <small>Create your account</small>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.Error))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>@Model.Error
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form method="post" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Name" class="form-label">
                                    <i class="fas fa-user me-1"></i>Full Name
                                </label>
                                <input asp-for="Input.Name" class="form-control" required
                                    placeholder="Enter your full name" title="Enter your full name" />
                                <span asp-validation-for="Input.Name" class="text-danger"></span>
                                <div class="invalid-feedback">Please provide your full name.</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.DateOfBirth" class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Date of Birth
                                </label>
                                <input asp-for="Input.DateOfBirth" type="date" class="form-control" required
                                    title="Select your date of birth"
                                    max="@DateTime.Today.AddYears(-13).ToString("yyyy-MM-dd")" value="" />
                                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
                                <div class="invalid-feedback">Please provide your date of birth.</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.MobileNumber" class="form-label">
                                    <i class="fas fa-phone me-1"></i>Mobile Number
                                </label>
                                <input asp-for="Input.MobileNumber" class="form-control" required
                                    placeholder="Enter mobile number" pattern="[0-9+\-\s()]+"
                                    title="Enter a valid mobile number" />
                                <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
                                <div class="invalid-feedback">Please provide a valid mobile number.</div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Gender" class="form-label">
                                    <i class="fas fa-venus-mars me-1"></i>Gender
                                </label>
                                <select asp-for="Input.Gender" class="form-select" required>
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Input.Gender" class="text-danger"></span>
                                <div class="invalid-feedback">Please select your gender.</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-1"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" type="email" class="form-control" required
                                placeholder="Enter your email address" title="Enter a valid email address" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                            <div class="invalid-feedback">Please provide a valid email address.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock me-1"></i>Password
                            </label>
                            <div class="input-group">
                                <input asp-for="Input.Password" type="password" class="form-control" required
                                    placeholder="Enter password" id="passwordInput" minlength="1"
                                    title="Enter a password (minimum 1 character)" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword"
                                    title="Show/Hide password" data-bs-toggle="tooltip">
                                    <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                </button>
                            </div>
                            <small class="form-text text-muted">
                                <i class="fas fa-info-circle me-1"></i>Password can be any length (minimum 1 character)
                            </small>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                            <div class="invalid-feedback">Please provide a password.</div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <span class="text-muted">Already have an account?</span>
                    <a asp-page="/Account/Login" class="btn btn-link p-0 ms-1">
                        <i class="fas fa-sign-in-alt me-1"></i>Login here
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Toggle password visibility
            $('#togglePassword').click(function () {
                const password = $('#passwordInput');
                const icon = $('#togglePasswordIcon');

                if (password.attr('type') === 'password') {
                    password.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                    $(this).attr('title', 'Hide password');
                } else {
                    password.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                    $(this).attr('title', 'Show password');
                }

                $(this).tooltip('dispose').tooltip();
            });

            // Bootstrap form validation
            (function () {
                'use strict';
                window.addEventListener('load', function () {
                    var forms = document.getElementsByClassName('needs-validation');
                    Array.prototype.filter.call(forms, function (form) {
                        form.addEventListener('submit', function (event) {
                            if (form.checkValidity() === false) {
                                event.preventDefault();
                                event.stopPropagation();
                            }
                            form.classList.add('was-validated');
                        }, false);
                    });
                }, false);
            })();

            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').alert('close');
            }, 10000);

            // Focus on first input
            $('#Input_Name').focus();
        });
    </script>
}
