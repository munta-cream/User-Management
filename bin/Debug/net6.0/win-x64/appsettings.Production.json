{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error",
      "Demo": "Information",
      "System": "Error",
      "Microsoft": "Error"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "server=your-production-server;database=demo_db_prod;user=your-prod-username;password=your-prod-password;SslMode=Required;AllowPublicKeyRetrieval=true;CharSet=utf8mb4;ConnectionTimeout=60;CommandTimeout=300;"
  },
  "Kestrel": {
    "Endpoints": {
      "Https": {
        "Url": "https://192.168.31.8:7272"
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxConcurrentUpgradedConnections": 1000,
      "MaxRequestBodySize": 10485760,
      "KeepAliveTimeout": "00:05:00",
      "RequestHeadersTimeout": "00:02:00"
    },
    "Certificates": {
      "Default": {
        "AllowInvalid": true
      }
    }
  },
  "Ngrok": {
    "Enabled": true,
    "Port": 7272,
    "Protocol": "https",
    "LocalUrl": "https://192.168.31.8:7272",
    "Region": "us",
    "AuthToken": "your-ngrok-auth-token-here"
  },
  "Application": {
    "Name": "User Management System",
    "Version": "1.0.0",
    "Environment": "Production",
    "BaseUrl": "https://192.168.31.8:7272",
    "AllowExternalAccess": true,
    "EnableNgrokTunneling": true
  }
}